@{
	Layout = null;

}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Otp</title>


	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/otp.css" asp-append-version="true" />

	<!-- Toastr -->
	<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

	<!-- Google Font -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Playwrite+HU:wght@100..400&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
		  rel="stylesheet">

	<!-- Font Awesome for icons -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


	<!-- Custom CSS  -->
	<style>
		body {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
			font-family: 'Poppins';
		}
	</style>
</head>

<body>
	<partial name="Notification"></partial>

	<div class="container">
		<div class="row otp-container">
			<div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
				<form method="post" onsubmit="return combineOTP();" id="verifyOtp">
					<h2>Enter OTP</h2>
					<div class="d-flex otp-box">
						<input type="text" maxlength="1" class="otp-input" oninput="moveToNext(this)" />
						<input type="text" maxlength="1" class="otp-input" oninput="moveToNext(this)" />
						<input type="text" maxlength="1" class="otp-input" oninput="moveToNext(this)" />
						<input type="text" maxlength="1" class="otp-input" oninput="moveToNext(this)" />
						<input type="text" maxlength="1" class="otp-input" oninput="moveToNext(this)" />
						<input type="text" maxlength="1" class="otp-input" oninput="moveToNext(this)" />
					</div>

					<input type="hidden" name="otp" id="otp-hidden" />

					<p class="warning" id="warning" style="display: none;">Only numbers allowed!</p>
					<button class="btn btn-primary mt-3" type="submit">Verify</button>
				</form>

			</div>
			<div class="col-md-6 illustration">
				<img src="~/img/img2.svg" alt="Illustration" class="img-fluid">
			</div>
		</div>
	</div>


	<!-- jQuery  -->
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<!-- Bootstrap  -->
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<!-- Toastr  -->
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js
   "></script>

	<script src="~/js/otp.js"></script>
	<script>
		function moveToNext(input) {
			input.value = input.value.replace(/[^0-9]/g, '');
			if (input.value.length === 1) {
				const next = input.nextElementSibling;
				if (next && next.classList.contains("otp-input")) {
					next.focus();
				}
			}
		}

		function combineOTP() {
			let otpInputs = document.querySelectorAll('.otp-input');
			let otp = '';
			for (let input of otpInputs) {
				if (!input.value) {
					alert("Please enter all OTP digits.");
					return false;
				}
				otp += input.value;
			}
			document.getElementById("otp-hidden").value = otp;
			return true;
		}
	</script>

</body>

</html>